# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/zcoder-chat?retryWrites=true&w=majority

# Alternative local MongoDB
# MONGODB_URI=mongodb://localhost:27017/zcoder-chat

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_CREDENTIALS=true

# Socket.io Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Room Configuration
MAX_ROOMS=1000
MAX_ROOM_MEMBERS=50
MAX_MESSAGE_LENGTH=500
ROOM_CLEANUP_INTERVAL=300000
INACTIVE_ROOM_TIMEOUT=1800000

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-session-secret-change-this-too

# Logging
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true
